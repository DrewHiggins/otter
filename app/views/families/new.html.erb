<h1>Add a New Family</h1>
<hr />
<%= form_for @family, html: {class: "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name:", class: "col-md-2 control-label" %>
    <div class="col-md-9">
      <%= f.text_field :name, class: "form-control", placeholder: "First Name" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-2 control-label" for="submit">&nbsp;</div>
    <div class="col-md-9">
      <%= f.submit "Submit", {class: "btn btn-default btn-primary", id: "submit"} %>
    </div>
  </div>
<% end %>
